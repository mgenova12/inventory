</div>
        
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="sticky">Product</th>
        <th class="sticky">Max Amount</th>
        <th class="sticky">Current Quantity</th>
        <th class="sticky">Quantity Needed</th>
      </tr>
    </thead>
    <tbody>

    <thead>
      <tr> 
        <td align="center" colspan="6">Prepped </td>
      </tr>
    </thead>

    <thead>
      <tr> 
        <td align="center" colspan="6">Frozen </td>
      </tr>
    </thead>    
    <% @inventories.each do |inventory| %>
      <% if inventory.cambridge_product.prepped == true &&  inventory.cambridge_product.item_type == 'frozen' && inventory.quantity_needed != 0 %>
        <tr>
          <td><%= inventory.cambridge_product.name %></td>
          <td><%= inventory.cambridge_product.tuesday_max %></td> 
          <td><%= cambridge_add_percent(inventory) %></td>  
          <td><%= inventory.quantity_needed %> <%= c_add_measurement_label(inventory) %></td>
       </tr>
      <% end %>
    <% end %>

    <thead>
      <tr> 
        <td align="center" colspan="6">Refrigerated </td>
      </tr>
    </thead>    

    <% @inventories.each do |inventory| %>
