<%= render partial: 'shared/navbar' %>

<h1>Thursday Order</h1>

<a href="/dover/inventory/<%= @order_id %>">All </a>
<a href="/dover/inventory/<%= @order_id %>/tuesday">Tuesday </a>
<a href="/dover/inventory/<%= @order_id %>/thursday">Thursday </a>

<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>

        <th>Current Quantity</th>
        <th>Thursday Quantity Needed</th>
      </tr>
    </thead>
