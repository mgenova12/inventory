      <tr> 
        <td align="center" colspan="6">Prepped </td>
      </tr>
    </thead>

    <thead>
      <tr> 
        <td align="center" colspan="6">Frozen </td>
      </tr>
    </thead>    

    <% @inventories.each do |inventory| %>
      <% if inventory.product.prepped == true && inventory.product.item_type == 'frozen' %>
      	<% if (thursday_quantity_needed(inventory) != '0 CASE') && (thursday_quantity_needed(inventory) != "0 #{inventory.product.measurement}") %>
      	<tr>
          <td><%= inventory.product.name %></td>
          <td><%= add_percent(inventory) %></td>  
          <td><%= thursday_quantity_needed(inventory) %></td>
