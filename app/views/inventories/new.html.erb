<h1>Prep Center Order List</h1>


<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>
        <th>Measurement</th>
        <th>Inventory</th>
      </tr>
    </thead>
    <tbody>

    <%= form_tag "/inventory/new", method: :post do %>
			<% @products.each do |product| %>
				<%= fields_for "product[]", product do |pf| %>
		      <tr>
		        <td><%= product.name %></td>
		        <td><%= product.measurement %></td>
		        <td><%= pf.number_field :amount, class:"form-control" %></td>
		        <%= pf.hidden_field :product_id, :value => product.id %>
		      </tr>
	      <% end %>
	    <% end %>

    </tbody>
  </table>
	     <button type="submit" class="btn btn-primary">Submit</button>
		<% end %>
  </div>
</div>

