<h1>Add a new Product</h1>

	<%= form_tag "/products", method: :post do %>
	<form>
	  <div class="form-group">
	    <label>Product Name</label>
	    <input type="text" class="form-control" name="name" placeholder="Enter Product Name">
	  </div>
	  <div class="form-group">
	    <label>Measuremnt</label>
	    <input type="text" class="form-control" name="measurement" placeholder="Enter Measurement">
	  </div>
	  <div class="form-group">
	    <label>Max Amount</label>
	    <input type="number" class="form-control" name="max" placeholder="Enter Max Amount">
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
	<% end %>